@page "/fetchdata"


@using Syncfusion.Blazor.DataForm
@using Syncfusion.Blazor.Buttons
@using System.ComponentModel.DataAnnotations

<h3>Float label with Form item</h3>

        <SfDataForm ID="MyForm"
                    Model="@EventRegistrationModel" EnableFloatLabel="true">
            <FormValidator>
                <DataAnnotationsValidator></DataAnnotationsValidator>
            </FormValidator>
            <FormItems>
                <FormItem Field="@nameof(EventRegistrationModel.FirstName)" />
                <FormItem Field="@nameof(EventRegistrationModel.LastName)" />
                <FormItem Field="@nameof(EventRegistrationModel.Email)" />
                <FormItem Field="@nameof(EventRegistrationModel.PhoneNumber)" />
            </FormItems>
        </SfDataForm>

<h3>Float label with AutoGenerated item</h3>

<SfDataForm ID="MyForm1"
            Model="@EventRegistrationModel1" EnableFloatLabel="true">
    <FormValidator>
        <DataAnnotationsValidator></DataAnnotationsValidator>
    </FormValidator>
    <FormItems>
        <FormItem Field="@nameof(EventRegistrationModel1.FirstName)" />
        <FormItem Field="@nameof(EventRegistrationModel1.LastName)" />
        <FormItem Field="@nameof(EventRegistrationModel1.Email)" />
        <FormItem Field="@nameof(EventRegistrationModel1.PhoneNumber)" />
    </FormItems>
</SfDataForm>

@code {
    private EventRegistration EventRegistrationModel = new EventRegistration()
    {
            FirstName = "Andrew",
            LastName = "Jack"
    };

    private EventRegistration EventRegistrationModel1 = new EventRegistration()
        {
            FirstName = "Andrew",
            LastName = "Jack"
        };

    public class EventRegistration
    {
        [Required(ErrorMessage = "Please enter your name.")]
        [Display(Name = "First Name")]
        public string FirstName { get; set; }
        [Required(ErrorMessage = "Please enter your last name.")]
        [Display(Name = "Last Name")]
        public string LastName { get; set; }
        [Required(ErrorMessage = "Please enter your email address.")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address.")]
        [Display(Name = "Email ID")]
        public string Email { get; set; }
        [Required(ErrorMessage = "Please enter your phone number.")]
        [Display(Name = "Phone Number")]
        [RegularExpression(@"^\d{10}$", ErrorMessage = "Please enter a valid 10-digit phone number.")]
        public string PhoneNumber { get; set; }
    }
}